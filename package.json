{
  "name": "saas-microservices-template",
  "private": true,
  "version": "0.1.0",
  "description": "Fork-ready SaaS microservices template with Next.js, Express, Python, and Supabase.",
  "workspaces": [
    "01_frontend/www",
    "01_frontend/dashboard",
    "02_backend",
    "03_microservices/billing_service",
